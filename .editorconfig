root=false

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

indent_style = space
indent_size = 2
max_line_length = 120

[*.{cl,el,lisp,asd}]
indent_style=space
indent_size=2

[{package.json,*.yml}]
indent_style = space
indent_size = 2

[*.org]
trim_trailing_whitespace = true
max_line_length = off
indent_style = space

[*.{md,markdown}]
max_line_length = off
